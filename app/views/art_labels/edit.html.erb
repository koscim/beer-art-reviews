<h1>Edit <%= @art_label.name %>!</h1>
  <div class="container">
    <%= image_tag(@art_label.label_photo, class: "show-size") %>
    <%= form_for @art_label do |f| %>

      <%= f.label :name, class: "white-text" %>
      <%= f.text_field :name, class: "short-field" %><br />

      <%= f.label :label_photo, 'Art Label Photo', class: "white-text" %>
      <%= f.file_field :label_photo, class: "short-field" %><br />

      <%= f.label :brewery, class: "white-text" %>
      <%= f.text_field :brewery, class: "short-field" %><br />

      <%= f.label :beer_style, class: "white-text" %>
      <%= f.text_field :beer_style, class: "short-field" %><br />

      <%= f.label :art_style, class: "white-text" %>
      <%= f.text_field :art_style, class: "short-field" %><br />

      <%= f.label :container_type, class: "white-text" %>
      <%= f.text_field :container_type, class: "short-field" %><br />

      <%= f.label :beer_description, class: "white-text" %>
      <%= f.text_field :beer_description, class: "short-field" %><br />

      <%= f.label :art_description, class: "white-text" %>
      <%= f.text_field :art_description, class: "short-field" %><br />

      <%= f.submit "Submit Edited #{@art_label.name}", class: "button" %>

    <% end %>
  </div>
</div>
